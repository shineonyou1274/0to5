    </main>

    <script>
        // State
        let gameState = {
            commonItems: [],
            diffItems: [],
            timeLeft: 300,
            timerId: null
        };

        const topics = [
            "ì¢‹ì•„í•˜ëŠ” ê³„ì ˆì€ ë¬´ì—‡ì¸ê°€ìš”?",
            "ìµœê·¼ì— ë¨¹ì€ ê°€ì¥ ë§›ìˆì—ˆë˜ ìŒì‹ì€?",
            "ì•„ì¹¨í˜• ì¸ê°„ì¸ê°€ìš”, ì €ë…í˜• ì¸ê°„ì¸ê°€ìš”?",
            "ê°•ì•„ì§€íŒŒ? ê³ ì–‘ì´íŒŒ?",
            "ì—¬í–‰ ìŠ¤íƒ€ì¼: íœ´ì–‘ vs ê´€ê´‘",
            "íƒ•ìˆ˜ìœ¡ ë¨¹ëŠ” ë²•: ë¶€ë¨¹ vs ì°ë¨¹",
            "ê°€ì¥ ìµœê·¼ì— ë³¸ ì˜í™”ë‚˜ ë“œë¼ë§ˆëŠ”?",
            "ì‰¬ëŠ” ë‚  ì£¼ë¡œ ë¬´ì—‡ì„ í•˜ë©° ë³´ë‚´ë‚˜ìš”?",
            "ì»¤í”¼ vs ì°¨(Tea)",
            "ì¸ìƒì˜ ì†Œìš¸ í‘¸ë“œê°€ ìˆë‹¤ë©´?"
        ];

        // Functions
        function startGame() {
            const timeSelect = document.getElementById('time-select');
            gameState.timeLeft = parseInt(timeSelect.value);
            
            document.getElementById('scene-start').classList.add('hidden');
            document.getElementById('scene-game').classList.remove('hidden');
            document.getElementById('scene-game').classList.add('flex'); // restore flex layout
            document.getElementById('timer-display').classList.remove('hidden');
            
            updateTimerDisplay();
            rotateTopic();
            
            gameState.timerId = setInterval(() => {
                gameState.timeLeft--;
                updateTimerDisplay();
                if (gameState.timeLeft <= 0) {
                    finishGame();
                }
            }, 1000);

            // Focus on first input
            setTimeout(() => document.getElementById('input-common').focus(), 100);
        }

        function updateTimerDisplay() {
            const minutes = Math.floor(gameState.timeLeft / 60);
            const seconds = gameState.timeLeft % 60;
            const display = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
            const timerEl = document.getElementById('timer-display');
            
            timerEl.innerText = display;
            
            if (gameState.timeLeft < 30) {
                timerEl.classList.add('text-red-500', 'animate-pulse');
                timerEl.classList.remove('text-indigo-600');
            }
        }

        function handleKeyPress(event, type) {
            if (event.key === 'Enter') {
                addItem(type);
            }
        }

        function addItem(type) {
            const inputId = type === 'common' ? 'input-common' : 'input-diff';
            const input = document.getElementById(inputId);
            const text = input.value.trim();

            if (text) {
                const listId = type === 'common' ? 'list-common' : 'list-diff';
                const countId = type === 'common' ? 'count-common' : 'count-diff';
                const container = document.getElementById(listId);
                
                // Remove placeholder if it exists
                if (container.children.length > 0 && container.children[0].classList.contains('text-center')) {
                    container.innerHTML = '';
                }

                // Create Item
                const itemDiv = document.createElement('div');
                itemDiv.className = `p-3 rounded-lg shadow-sm border item-pop flex justify-between items-center ${
                    type === 'common' ? 'bg-white border-emerald-100 text-emerald-800' : 'bg-white border-amber-100 text-amber-800'
                }`;
                itemDiv.innerHTML = `
                    <span class="font-medium"># ${text}</span>
                    <button onclick="this.parentElement.remove(); updateCounts();" class="text-slate-300 hover:text-red-400">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                
                // Add to DOM first (top)
                container.insertBefore(itemDiv, container.firstChild);
                input.value = '';
                
                // Update State
                if (type === 'common') gameState.commonItems.push(text);
                else gameState.diffItems.push(text);

                updateCounts();
                input.focus();
            }
        }

        function updateCounts() {
            const commonCount = document.getElementById('list-common').querySelectorAll('div.item-pop').length;
            const diffCount = document.getElementById('list-diff').querySelectorAll('div.item-pop').length;
            
            document.getElementById('count-common').innerText = commonCount;
            document.getElementById('count-diff').innerText = diffCount;
        }

        function rotateTopic() {
            const randomTopic = topics[Math.floor(Math.random() * topics.length)];
            const el = document.getElementById('topic-suggestion');
            el.style.opacity = 0;
            setTimeout(() => {
                el.innerText = randomTopic;
                el.style.opacity = 1;
            }, 200);
        }

        function finishGame() {
            clearInterval(gameState.timerId);
            
            const commonCount = document.getElementById('list-common').querySelectorAll('div.item-pop').length;
            const diffCount = document.getElementById('list-diff').querySelectorAll('div.item-pop').length;

            document.getElementById('result-common-count').innerText = commonCount;
            document.getElementById('result-diff-count').innerText = diffCount;

            document.getElementById('scene-game').classList.add('hidden');
            document.getElementById('scene-game').classList.remove('flex');
            document.getElementById('timer-display').classList.add('hidden');
            
            document.getElementById('scene-result').classList.remove('hidden');
        }

        function resetGame() {
            // Reset UI
            document.getElementById('list-common').innerHTML = `
                <div class="text-center text-slate-400 mt-10 text-sm">
                    <i class="fas fa-comment-dots text-3xl mb-2 opacity-30"></i><br>
                    ì‚¬ì†Œí•œ ê²ƒë„ ì¢‹ì•„ìš”.<br>"ì•„ì¹¨ ë¨¹ì—ˆì–´ìš”?"ë¶€í„° ë¬¼ì–´ë³´ì„¸ìš”.
                </div>`;
            document.getElementById('list-diff').innerHTML = `
                <div class="text-center text-slate-400 mt-10 text-sm">
                    <i class="fas fa-globe-americas text-3xl mb-2 opacity-30"></i><br>
                    ë‹¤ë¦„ì€ í‹€ë¦° ê²Œ ì•„ë‹ˆì—ìš”.<br>ì„œë¡œì˜ íŠ¹ë³„í•œ ì ì„ ì°¾ì•„ë³´ì„¸ìš”.
                </div>`;
            
            document.getElementById('input-common').value = '';
            document.getElementById('input-diff').value = '';
            updateCounts();
            
            // Reset State
            gameState = {
                commonItems: [],
                diffItems: [],
                timeLeft: 300,
                timerId: null
            };

            const timerEl = document.getElementById('timer-display');
            timerEl.classList.remove('text-red-500', 'animate-pulse');
            timerEl.classList.add('text-indigo-600');

            document.getElementById('scene-result').classList.add('hidden');
            document.getElementById('scene-start').classList.remove('hidden');
        }
    </script>
</body>
</html>
